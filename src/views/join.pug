extends base

block content  
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="name", type="text", placeholder="Enter your name", required)
        input(name="email", type="text", placeholder="Enter your email", required, unique)
        input(name="username", type="text",placeholder="Enter username", required, unique)
        input(name="password", type="password", placeholder="Enter your password", required)
        input(name="password2", type="password", placeholder="Confirm your password", required)
        input(name="location", type="text", placeholder="Enter your location", required)
        input(type="submit", value="Join")
    hr
    div 
        span Already have an account?
        a(href="/login") Log in now  &rarr;