extends ../base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Old password", type="password", name="oldPassword", required)
        input(placeholder="New password", name="newPassword", type="password", required)
        input(placeholder="Confirm new password", name="newPassword1", type="password", required)
        input(type="submit", value="Change password")